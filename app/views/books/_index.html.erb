<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
        <% books.each do |book| %>
        <!--books/から引き渡された@booksがbooks-->
      <tr>
        <td>
          <%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
        <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <!--いいね非同期部分テンプレ呼び出し-->
        <td id="favorites_btns_<%= book.id %>">
    　　<%= render 'devise/favorites/btn', book: @book %>>
    　　</td>
          <td><%= link_to "コメント数: #{book.book_comments.count}", book_path(book.id) %></td>
          <% end %>
      </tr>
  </tbody>
</table>